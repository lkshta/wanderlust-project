<% layout("./layouts/boilerplate") %>

    <div class="row mt-3"></div>
    <div class="col-8 offset-2"> <!--offset means space from left-->

        <h3>Create a New Listing</h3>
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input 
                    type="text" 
                    placeholder="Enter title" 
                    name="listing[title]" 
                    class="form-control" required>
                <div class="valid-feedback">Title looks good!</div>
                <div class="invalid-feedback">Title required!</div>
            </div>

            <div class="mb-3"> <!--mb: margin-bottom:3-->
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" name="listing[description]" required></textarea>
                <div class="valid-feedback">looks good</div>
                <div class="invalid-feedback">Description required</div>

            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Upload Listing Image</label>
                <input class="form-control" name="listing[image]" type="file" required>
            </div>

            <div class="row">
                <div class="mb-3 col-md-4"> <!--price will be in col-4 when screen size = medium and after that-->
                    <label for="price" class="form-label">Price</label>
                    <input class="form-control" name="listing[price]" placeholder="1200" required>
                    <div class="valid-feedback">fine</div>
                    <div class="invalid-feedback">Price should be valid</div>
                </div>

                <div class="mb-3 col-md-8"> <!--country will be in col-8-->
                    <label for="country" class="form-label">Country</label>
                    <input 
                    type="text" class="form-control" 
                    name="listing[country]" 
                    placeholder="Enter country"
                    required
                    >
                    <div class="valid-feedback">looks good</div>
                    <div class="invalid-feedback">Country required</div>
                </div>

            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input 
                type="text" 
                class="form-control" 
                name="listing[location]" 
                placeholder="Enter location" 
                required
                >
                <div class="valid-feedback">looks good</div>
                <div class="invalid-feedback">Location required</div>
            </div>
            <button class="btn btn-dark add-btn mt-3">Add</button>
        </form>
    </div>
    </div>